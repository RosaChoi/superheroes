<%= link_to "Add a Team", new_team_path, class:"btn btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Superheroes</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td class="col-sm-3"><h4><%= link_to "#{team.name}", team_path(team) %></h4></td>
        <td class="col-sm-7"><%= team.description %></td>
        <td id="heroesCount" class="col-sm-2"><%= link_to "#{team.superheros.count}", team_superheros_path(team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
